<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="12102021-01"
               author="mark"
               dbms="postgresql">
        <sql dbms="postgresql"
             endDelimiter=";">
            CREATE SCHEMA IF NOT EXISTS osh_schema;
        </sql>
    </changeSet>

    <changeSet id="12102021-02"
               author="mark"
               dbms="postgresql">
		<preConditions onFail="MARK_RAN">
		    <not>
		        <tableExists tableName="users" schemaName="osh_schema"/>
		    </not>
		</preConditions>
        <createTable tableName="users"
                     schemaName="osh_schema">

            <column name="id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="certificate_number" type="int"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="surname" type="VARCHAR(255)"/>
            <column name="gender" type="VARCHAR(255)"/>
            <column name="profession" type="VARCHAR(255)"/>
            <column name="date_employment" type="datetime"/>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
	</changeSet>
</databaseChangeLog>
